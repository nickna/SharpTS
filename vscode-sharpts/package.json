{
  "name": "vscode-sharpts",
  "displayName": "SharpTS",
  "description": ".NET attribute support for TypeScript decorators",
  "version": "0.1.0",
  "publisher": "sharpts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickna/SharpTS"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "SharpTS",
      "properties": {
        "sharpts.projectFile": {
          "type": "string",
          "default": "",
          "description": "Path to .csproj file for assembly references"
        },
        "sharpts.additionalReferences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional assembly paths to load"
        },
        "sharpts.restartOnCrash": {
          "type": "boolean",
          "default": true,
          "description": "Automatically restart the bridge if it crashes"
        },
        "sharpts.maxRestartAttempts": {
          "type": "number",
          "default": 3,
          "description": "Maximum restart attempts within 1 minute"
        }
      }
    },
    "commands": [
      {
        "command": "sharpts.restartBridge",
        "title": "SharpTS: Restart Bridge"
      },
      {
        "command": "sharpts.showBridgeStatus",
        "title": "SharpTS: Show Bridge Status"
      },
      {
        "command": "sharpts.compile",
        "title": "SharpTS: Compile Current File"
      },
      {
        "command": "sharpts.run",
        "title": "SharpTS: Run Current File"
      },
      {
        "command": "sharpts.compileAndRun",
        "title": "SharpTS: Compile and Run"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "bundle-bridge": "dotnet publish ../SharpTS.csproj -c Release -o ./bin/bridge",
    "prebuild": "npm run bundle-bridge",
    "build": "npm run compile",
    "prepackage": "npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
